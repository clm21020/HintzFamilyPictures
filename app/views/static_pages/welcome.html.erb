<% @user ||= User.new %>

<h1>Welcome to the Hintz Family Catalog!</h1>
<p class="description">To get the full functionality of this site, either sign up or log in below.<br>If you just want to browse some pictures first, you can skip this step by <a href="/items"><em>clicking here</em></a>.</p>

<form action="<%= session_url %>" method="post">
	<h2>Log In</h2>
	<p class="description">If you've been here before</p>
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

	<label> Username/Email <br>
		<input type="text" name="session[identification]">
	</label>

	<label> Password <br>
		<input type="password" name="session[password]">
	</label>
	<button type="submit">Log In</button>
</form>
<br>
<br>

<form action="<%= users_url %>" method="post">
	<h2>Sign Up</h2>
	<p class="description">If you're new to the site</p>
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

	<label> Username <br>
		<input type="text" name="user[username]" value="<%= @user.username %>">
	</label>

	<label> Email <br>
		<input type="text" name="user[email]" value="<%= @user.email %>">
	</label>

	<label> Password <br>
		<input type="password" name="user[password]">
	</label>
	<button type="submit">Sign Up</button>
</form>