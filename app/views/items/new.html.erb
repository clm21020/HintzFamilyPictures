<h1>Create A New Item</h1>

<form action="<%= items_url %>" method="post" enctype="multipart/form-data">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	
	<label> Title <br>
		<input type="text" name="item[title]">
	</label>

	<label> Keywords (separate with commas) <br>
		<input type="text" name="item[keywords]">
	</label>

	<label> Pictures <button type="button" class="button-add-another"> + </button></label>
	<div class="picture-pickers">
		<div class="picture-picker">
			<input type="file" name="item[images][]">
			<button type="button" class="button-remove-picker">X</button>
		</div>
	</div>

	<button type="submit">Create This Item</button>
</form>


<script type="text/javascript">
	$(function(){
		$('.button-add-another').bind('click', addAnother)
		$('.picture-pickers').on('click', '.button-remove-picker', removePicker)
	});
</script>