<h1> <%= @item.title %> </h1>
<a href="/items">Click here to go back to the full list</a><br><br>

<% if logged_in? %>
	<div class="all-interests">
		<div class="interested_so_far"> <%= interested_users(@item) %> </div>
	</div><br>
<% end %>

<% @item.pictures.each do |pic| %>
	<%= image_tag pic.image.url(:large) %>
	<%= image_tag pic.image.url(:medium) %>
	<%= image_tag pic.image.url(:small) %>
<% end %>

<% @item.keywords.each do |kw| %>
	<div> <%= kw.word %> </div>
<% end %>

<% if current_user && current_user.admin %>
	<br>
	<div class="admin-panel">
		<%= link_to "Edit this item", edit_item_url(@item) %><br>
		<a href="#">Future soft delete button</a>
	</div>
<% end %>